#include "buzzer.h"

TIM_HandleTypeDef htim3;

void buzzerRun(){
	switch(pedes_state){
	case PEDES_GREEN:
		if (timer6_flag ==1){
			__HAL_TIM_SetCompare(&htim3,TIM_CHANNEL_1, 100 - get_timer4_counter());
			setTimer6((amberTime + greenTime)/20 *1000);
		}
		break;
	default:
		break;
	}
}
