#include "buzzer.h"

TIM_HandleTypeDef htim3;

int buzzer_flag =0;

void buzzerRun(){
	switch (buzzer_flag){
	case BUZZER_OFF:
		__HAL_TIM_SetCompare(&htim3,TIM_CHANNEL_1, 0);
		break;
	case BUZZER_ON:
		__HAL_TIM_SetCompare(&htim3,TIM_CHANNEL_1, 25 );
		HAL_Delay(200);
		__HAL_TIM_SetCompare(&htim3,TIM_CHANNEL_1, 25 -5);
		HAL_Delay(200);
		__HAL_TIM_SetCompare(&htim3,TIM_CHANNEL_1, 25 -10);
		HAL_Delay(200);
		break;
	default:
		break;
	}
}
